        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:ProyectoADAT"
        mc:Ignorable="d"
        Title="ContraseñaOlvidada" Height="284" Width="300" Icon="Imagenes/infopago.ico" ResizeMode="NoResize">
